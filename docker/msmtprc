# msmtp configuration for RadioGrab
# This file will be processed as a template with envsubst

# Default settings
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        /var/log/msmtp.log

# Account for RadioGrab emails  
account        radiograb
host           ${SMTP_HOST:-smtp.gmail.com}
port           ${SMTP_PORT:-587}
from           ${SMTP_FROM:-noreply@radiograb.svaha.com}
user           ${SMTP_USERNAME:-}
password       ${SMTP_PASSWORD:-}

# Set default account
account default : radiograb